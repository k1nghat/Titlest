{
	"manifest_version": 2,
	"name": "Titlest",
	"homepage_url": "http://localhost/",
	"description": "an extension with the ability to replace or append a websites title",
	"version": "2.0.0",
	"permissions": [
		"activeTab",
		"tabs",
		"<all_urls>",
		"*://*/*",
		"storage",
		"unlimitedStorage",
		"contextMenus",
		"notifications",
		"webNavigation"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"browser_action": {
		"default_title": "Open Titlest",
		"default_popup": "html/popup.html",
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png",
			"48": "icons/48.png",
			"128": "icons/128.png"
		}
	},
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"commands": {
		"add-host": {
			"suggested_key": {
				"default": "Alt+Shift+H"
			},
			"description": "Add host to Titlest"
		}
	}
}

{
    "name": "Titlest",
    "description": "an extension with the ability to replace or append a websites title",
    "version": "1.0.0",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage",
        "unlimitedStorage",
        "<all_urls>",
        "notifications"
    ],
    "background": {
        "scripts": ["js/storage.js", "js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "img/t16.png",
            "32": "img/t32.png",
            "48": "img/t48.png",
            "128": "img/t128.png"
        },
        "default_title": "titlest",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/t16.png",
        "32": "img/t32.png",
        "48": "img/t48.png",
        "128": "img/t128.png"
    },
    "content_scripts": [
        {
            "js": ["js/storage.js", "js/content.js"],
            "matches": ["<all_urls>"],
            "run_at": "document_start"
        }
    ],
    "commands": {
        "add-site": {
            "suggested_key": {
                "default": "Alt+Shift+N",
                "mac": "Command+Shift+N"
            },
            "description": "Add site to list"
        }
    }
}
